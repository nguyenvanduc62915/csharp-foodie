@model AppCore.Models.ViewModels.RegisterRequest
@{
    Layout = "Admin/_Master";
}

<h4>Create New Account</h4>
<div class="card-block">
    <h4 class="sub-title">Account Information</h4>
    <form method="post" asp-controller="AccountManagement" asp-action="Create">

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                <p>@ViewBag.Message</p>
            </div>
        }
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" placeholder="Email" class="input" required asp-for="Email">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" placeholder="First Name" required asp-for="FirstName">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Last Name" required asp-for="LastName">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Phone Number</label>
            <div class="col-sm-10">
                <input type="text" placeholder="Phone Number" required asp-for="PhoneNumber">
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" placeholder="Create password" class="password" required asp-for="Password">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" placeholder="Confirm password" class="password" required>
            </div>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>
