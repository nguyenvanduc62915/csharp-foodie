@model AppCore.Models.ViewModels.ProductRequest
@{
    Layout = "Admin/_Master";
    var categories = ViewData["paymentMethods"] as IEnumerable<PaymentMethod>;
}
@* <h4>Thêm Phương Th?c Thanh Toán</h4> *@
<div class="card-block">
    <h4 class="sub-title">Thêm Phương Thức Thanh Toán</h4>
    <form method="post" asp-controller="PaymentMethod" asp-action="Store">
        @if (ViewBag.Message != null) {
            <div class="alert alert-info">
                <p>@ViewBag.Message</p>
            </div>
        }

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Name" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-7 col-xs-12">
                <div class="checkbox-fade fade-in-primary">
                    <label>
                        <input type="checkbox" asp-for="Active" checked/>
                        <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                        <span class="text-inverse">Active</span>
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>