@model AppCore.Models.ViewModels.CategoryRequest
@{
    Layout = "Admin/_Master";
    ViewData["Title"] = "Edit Payment Method";
    var paymentMethod = ViewData["PaymentMethod"] as PaymentMethod;
}
<h4>Sửa Phương Thức Thanh Toán </h4>
@if (paymentMethod != null) {
    <form method="post" asp-controller="PaymentMethod" asp-action="Update" asp-route-paymentMethodId="@paymentMethod.PaymentMethodId">
        @if (ViewBag.Message != null) {
            <div class="alert alert-info">
                <p>@ViewBag.Message</p>
            </div>
        }
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Name" value="@paymentMethod.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-7 col-xs-12">
                <div class="checkbox-fade fade-in-primary">
                    <label>
                        <input type="checkbox" asp-for="Active" checked="@(paymentMethod.Active)" />
                        <span class="cr"><i class="cr-icon icofont icofont-ui-check txt-primary"></i></span>
                        <span class="text-inverse">Active</span>
                    </label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <p>Category not found.</p>
}