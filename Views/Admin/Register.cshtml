@model AppCore.Models.ViewModels.RegisterRequest
@{
    Layout = "Admin/_Layout";
}

<div class="theme-loader">
    <div class="ball-scale">
        <div class='contain'>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
            <div class="ring"><div class="frame"></div></div>
        </div>
    </div>
</div>
<!-- Pre-loader end -->
<section class="login p-fixed d-flex text-center bg-primary common-img-bg">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <!-- Authentication card start -->
                <div class="signup-card card-block auth-body mr-auto ml-auto">
                    <div class="row m-b-20">
                        @if (ViewBag.Errors != null) {
                            <div class="alert alert-danger">
                                @ViewBag.Errors
                            </div>
                        }
                    </div>
                    <form class="md-float-material" method="post" asp-controller="Admin" asp-action="PostRegister">
                        <div class="text-center">
                            <img src="~/admin/assets/images/auth/logo-dark.png" alt="logo.png">
                        </div>
                        <div class="auth-box">
                            <div class="row m-b-20">
                                <div class="col-md-12"><h3 class="text-center txt-primary">Register Admin</h3></div>
                            </div>
                            <hr/>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Your First Name" asp-for="FirstName" required/>
                                <span class="md-line"></span>
                            </div>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Your Last Name" asp-for="LastName" required/>
                                <span class="md-line"></span>
                            </div>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Your Email Address" asp-for="Email" required/>
                                <span class="md-line"></span>
                            </div>
                             <div class="input-group">
                                <input type="text" class="form-control" placeholder="Your Phone Number" asp-for="PhoneNumber" required/>
                                <span class="md-line"></span>
                            </div>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" required/>
                                <span class="md-line"></span>
                            </div>

                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Login.</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- end of form -->
                </div>
                <!-- Authentication card end -->
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>